{
  "name": "pokedex-api",
  "version": "0.0.1",
  "description": "REST API for Pokedex.",
  "license": "ISC",
  "author": {
    "name": "Jitterbit, Inc."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jitterbit/pokedex.git",
    "directory": "api/"
  },
  "scripts": {
    "build": "nest build",
    "start": "dotenvx run -- nest start --watch",
    "test": "dotenvx run -f .env.test -- jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.5.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@golevelup/ts-jest": "^0.5.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.14.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.5.0",
    "nock": "^13.5.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1",
      "tests/(.*)": "<rootDir>/tests/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}
